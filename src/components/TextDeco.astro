---
interface Props {
  url?: string;
  inline?: boolean;
}

const { url, inline = true } = Astro.props;
const inlineStyle = inline ? "" : "font-medium text-xl";
---

<span class="text-nowrap"
  ><a class:list={["hover:underline decoration-amber-400 decoration-2 cursor-pointer text-amber-300 font-light text-wrap", inlineStyle]} href={url}><slot /></a
  ></span
>
