---
interface Props {
  darkBg: boolean;
  border?: string[];
}
const { darkBg, border = ["border-y-4"] } = Astro.props;
const borderRender = darkBg ? "" : border;
---

<section class:list={["grid gap-2 py-10 grid-cols-12", `${darkBg ? "bg-black/50" : "border-yellow-500 border-dashed"}`, borderRender]}>
  <slot />
</section>
