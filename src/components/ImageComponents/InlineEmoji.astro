---
import { Image } from "astro:assets";

interface Props {
  emoji: ImageMetadata;
  size?: number;
}

const { emoji, size = 8 } = Astro.props;

const emojiWidth = `w-${size}`;
---

<Image src={emoji} alt={emoji.src.split("/").at(-1) || "mutant emoji"} class=`max-w-8 ${emojiWidth} pb-2 inline-block m-auto` />
