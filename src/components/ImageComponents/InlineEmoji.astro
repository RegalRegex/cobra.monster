---
import { Image } from "astro:assets";

interface Props {
  emoji: ImageMetadata;
  size?: number;
  styles?: string;
}

const { emoji, size = 8, styles = "" } = Astro.props;

const emojiWidth = `w-${size}`;
---

<Image src={emoji} alt={emoji.src.split("/").at(-1) || "mutant emoji"} class:list={[`max-w-8 inline-block m-auto`, `${emojiWidth}`, `${styles}`]} />
