---
import { Image } from "astro:assets";
import LinkButton from "./LinkButton.astro";
import argentAss from "../assets/argent/argentAss.png";
import BadgeDisplay from "./BadgeDisplay.astro";
import SocialsList from "./SocialsList.astro";

interface Props {
  homePage?: boolean;
}

const { homePage } = Astro.props;
---

<!-- NOTE: Height of footer must be offset by padding-bottom in Layout -->
<footer class:list={["bg-redDark border-redLight w-full text-stone-200 absolute  border-t-8", `${homePage ? "min-h-[225px]" : "min-h-[75px]"}`]}>
  {
    homePage && (
      <div class="grid grid-cols-2 gap-2 m-5 pb-5 border-b-2 border-dashed border-yellow">
        <div class="flex flex-col justify-center items-center gap-2">
          <LinkButton button={false} to="/">
            <h2 class="text-2xl font-bold">Furry Fitness Webring</h2>
          </LinkButton>
          <ul class="flex justify-center gap-10">
            <li>
              <LinkButton button={false} to="/">
                ←︎ Previous
              </LinkButton>
            </li>
            <li>
              <LinkButton button={false} to="/">
                Next →︎
              </LinkButton>
            </li>
          </ul>
        </div>
        <div>
          <BadgeDisplay collection="standardBadges" />
        </div>
      </div>
    )
  }
  <div class="grid grid-cols-5 p-5">
    <div>
      <LinkButton to="/#top" button={false}>⇧ Back To Top</LinkButton>
    </div>
    <div class="col-span-3">
      <nav class="flex">
        <div id="linkBox" class="flex justify-between w-full">
          <div class="flex flex-col">
            <h2 class="text-2xl font-bold">Socials</h2>
            <SocialsList logos={false} />
          </div>
          <div class="flex flex-col">
            <h2 class="text-2xl font-bold">Stuff</h2>
            <ul>
              <li>
                <LinkButton button={false} to="/about"> About Me </LinkButton>
              </li>
              <li>
                <LinkButton button={false} to="/links"> Links </LinkButton>
              </li>
            </ul>
          </div>
          <div>
            <h2 class="text-2xl font-bold">Furry Fitness Webring</h2>
            <ul>
              <li>
                <LinkButton button={false} to="/"> ←︎ Previous </LinkButton>
              </li>
              <li>
                <LinkButton button={false} to="/"> →︎ Next </LinkButton>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </div>
    <div class="flex justify-self-center aspect-square max-w-[100px] hover:animate-assJiggle">
      <Image class="drop-shadow-lg" src={argentAss} alt="woohooehehee" />
    </div>
  </div>
</footer>
