---
const split = Astro.url.pathname.split("/");
const splitSpliced = split.toSpliced(-1);
const returnPathName = splitSpliced[splitSpliced.length - 1] === "" ? "home" : splitSpliced[splitSpliced.length - 1];
const rejoined = splitSpliced.join("/") === "" ? "/" : splitSpliced.join("/");

// TODO: if home, display nav links instead
---

<nav class="py-2 bg-redDark border-redLight w-full flex xs:flex-row flex-col text-white">
  <div class="text-zinc-300">
    <a href="/" id="logoLeft" class="text-3xl border-r-0 xs:border-r-2 border-zinc-300 border-opacity-75 mx-5 pr-4 flex items-center font-medium font-prospekt"
      >☭COBRA<span class="text-4xl mb-1">★</span>MONSTER☭</a
    >
  </div>
  <div class="flex items-center xs:ml-0 ml-5">
    <ul class="flex gap-5 text-redDarkest font-medium">
      <li class="hover:scale-[1.15] transition duration-300">
        <a href={rejoined} class:list={["capitalize px-2 py-1 bg-zinc-300 rounded-full"]}>←︎ {returnPathName}</a>
      </li>
    </ul>
  </div>
</nav>
