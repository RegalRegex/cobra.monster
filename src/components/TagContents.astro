---
import TextDeco from "./TextDeco.astro";

interface Props {
  tagIds: string[];
}
const { tagIds } = Astro.props;
---

<div>
  <h3 class="text-2xl font-medium">Tags</h3>
  <ul>
    {
      tagIds.map((tagId) => (
        <li>
          {/* TODO: Update links */}
          <TextDeco url={`/blog/tagged/${tagId}`}>{tagId}</TextDeco>
        </li>
      ))
    }
  </ul>
</div>
