---
import { Image } from "astro:assets";

interface Props {
  images: ImageMetadata[];
}

const { images } = Astro.props;
---

<div class="p-8">
  <h1 class="text-5xl font-bold text-center my-8">Gallery</h1>
  <div class="mx-auto container max-w-(--breakpoint-sm) grid grid-cols-2 gap-8">
    {
      images.map((item) => (
        <a href={`/gallery/test`} class="group transition-all mb-4 block">
          <Image
            src={item}
            alt={item.src}
            format="avif"
            width={720}
            quality="mid"
            class:list={["rounded-lg transition-all", "group-hover:shadow-lg group-hover:opacity-90"]}
          />
          <div class="mt-4 text-center text-neutral-700">
            <strong class="font-normal">title</strong>
            <p class="text-xs">desc.</p>
          </div>
        </a>
      ))
    }
  </div>
</div>
