---
import Layout from "../layouts/Layout.astro";
import TopNav from "@components/TopNav.astro";
import HomeSection from "@components/HomeSection.astro";
import HomeContentBox from "@components/HomeContentBox.astro";
import BadgeDisplay from "@components/BadgeDisplay.astro";
import { Image } from "astro:assets";
import ArgentRelax from "@assets/argent/ArgentRest_Luzzy.jpg";
import PageHeader from "@components/PageHeader.astro";
import SocialsList from "@components/SocialsList.astro";
import ChiStar from "@components/ChiStar.astro";
import links from "@components/LinkList/lists/_links.json";
import LinkList from "@components/LinkList/LinkList.astro";
import Link from "@components/Link.astro";

import ArgentSymmetrical from "@assets/argent/SymmetricalArgent_Orion.png";
---

<Layout>
  <TopNav />
  <PageHeader leftRight="left">Links</PageHeader>
  <HomeSection darkBg={false} border={[]}>
    <HomeContentBox columns={["lg:col-start-3 lg:col-span-8 sm:col-start-2 sm:col-span-10 col-start-1 col-span-12"]}>
      <h2 class="text-5xl xs:text-6xl underline decoration-4 decoration-redLight mb-5 text-center">Site Map</h2>
      <div class="grid grid-cols-2 auto-rows-min lg:flex justify-around gap-5 justify-items-center">
        <div class="flex flex-col gap-5 xs:col-span-1 col-span-2">
          <section>
            <h3 class="text-4xl">About</h3>
            <ul>
              <!-- <ul class="pl-5 list-disc list-outside [&_ul]:list-[revert]"> -->
              <li>
                <Link url="/about">About Regal</Link>
              </li>
              <li>
                <Link url="/blog">Blog</Link>
              </li>
              <li>
                <Link url="/credits">Credits & Site Info</Link>
                <ul class="pl-5 list-disc">
                  <li><Link url="/credits#ArgentArt">Art Credits</Link></li>
                  <li><Link url="/credits#Chicago">Design Credits</Link></li>
                  <li><Link url="/" wip={true}>WebDev Log</Link></li>
                </ul>
              </li>
            </ul>
          </section>
        </div>
        <div class="basis-1/3 col-span-2 xs:row-start-2 row-start-3 self-center">
          <Image src={ArgentSymmetrical} alt="Argent Symm" class="rounded-lg max-w-[80%] lg:max-w-[100%] m-auto" />
        </div>
        <div class="flex flex-col gap-5 xs:col-span-1 col-span-2">
          <section>
            <h3 class="text-4xl">Furry Stuff</h3>
            <ul>
              <li><Link url="/" wip={true}>Fursona Page</Link></li>
              <li><Link url="/" wip={true}>OCs Page</Link></li>
              <li><Link url="/links#socials">Art Galleries</Link></li>
            </ul>
          </section>
          <section>
            <h3 class="text-4xl">Tools</h3>
            <ul>
              <li>
                <Link url="/" wip={true}>WIP</Link>
              </li>
            </ul>
          </section>
          <section>
            <h3 class="text-4xl">Cool Links</h3>
            <ul>
              <li>
                <Link url="/links#queerArt">Queer Art & Misc. Links</Link>
              </li>
              <li>
                <Link url="/links#88x31">88x31 Buttons</Link>
              </li>
            </ul>
          </section>
        </div>
      </div>
    </HomeContentBox>
    <!-- <div class="flex justify-center">
        <Image class="lg:max-w-[70%] rounded-md" src={ArgentRelax} alt="Argent Chill" />
      </div> -->
    <div class="col-start-2 col-span-10 flex justify-around text-5xl xs:text-6xl py-8">
      {[...Array(4)].map(() => <ChiStar color="text-yellow" />)}
    </div>
    <HomeContentBox columns={["lg:col-start-3 lg:col-span-8 sm:col-start-2 sm:col-span-10 col-start-1 col-span-12"]}>
      <h2 id="socials" class="text-5xl xs:text-6xl underline decoration-4 decoration-redLight mb-5 text-center">More Regal</h2>
      <div class="py-8 flex flex-col sm:grid grid-cols-1 lg:grid-cols-2 gap-5 text-slate-200">
        <div class="xs:flex-row flex-col flex items-center gap-2">
          <h3 class="text-4xl">Socials</h3>
          <div class="xs:border-l-2 border-t-2 lg:border-t-0 xs:pt-0 pt-2 border-yellow pl-1">
            <SocialsList siteGroup="socials" />
          </div>
        </div>
        <div class="xs:flex-row flex-col flex gap-2 xs:justify-self-end items-center">
          <div class="xs:border-r-2 border-t-2 xs:border-t-0 lg:border-t-0 border-yellow xs:pr-2 xs:pt-0 pt-2 xs:order-1 order-2">
            <SocialsList siteGroup="galleries" />
          </div>
          <h3 class="text-4xl text-center xs:order-2 order-1">Art Galleries</h3>
        </div>
        <div class="xs:flex-row flex-col flex items-center gap-2 lg:col-span-2 lg:justify-self-center">
          <h3 class="text-4xl">Contact</h3>
          <div class="xs:border-l-2 xs:border-t-0 xs:border-b-2 border-t-2 lg:border-b-0 xs:pt-0 pt-2 border-yellow pl-1">
            <SocialsList siteGroup="contact" />
          </div>
        </div>
      </div>
      <div class="flex justify-center">
        <Image class="lg:max-w-[70%] rounded-md" src={ArgentRelax} alt="Argent Chill" />
      </div>
    </HomeContentBox>
    <div class="col-start-2 col-span-10 flex justify-around text-5xl xs:text-6xl py-8">
      {[...Array(4)].map(() => <ChiStar color="text-yellow" />)}
    </div>
    <HomeContentBox columns={["lg:col-start-3 lg:col-span-8 sm:col-start-2 sm:col-span-10 col-start-1 col-span-12"]}>
      <div class="flex flex-col divide-y-2 divide-stone-200">
        <div class="mx-2 xs:mx-20 pb-5">
          <h2 id="queerArt" class="text-5xl xs:text-6xl underline decoration-4 decoration-redLight mb-5 text-center">Queer Art</h2>
          <ul class="list-disc flex flex-col gap-2 text-stone-200 text-lg">
            <LinkList linkJsonArray={links.artLinks} />
          </ul>
        </div>
        <div class="mx-2 xs:mx-20 py-5">
          <h2 class="text-5xl xs:text-6xl underline decoration-4 decoration-redLight mb-5 text-center">WebDev</h2>
          <ul class="list-disc flex flex-col gap-2 text-stone-200 text-lg">
            <LinkList linkJsonArray={links.webDev} />
          </ul>
        </div>
        <div class="mx-2 xs:mx-20 pt-5">
          <h2 class="text-5xl xs:text-6xl underline decoration-4 decoration-redLight mb-5 text-center">Misc Cool Sites</h2>
          <ul class="list-disc flex flex-col gap-2 text-stone-200 text-lg">
            <LinkList linkJsonArray={links.miscLinks} />
          </ul>
        </div>
      </div>
    </HomeContentBox>
    <div class="col-start-2 col-span-10 flex justify-around text-5xl xs:text-6xl py-8">
      {[...Array(4)].map(() => <ChiStar color="text-yellow" />)}
    </div>
    <HomeContentBox columns={["lg:col-start-2 lg:col-span-5 xs:col-start-2 xs:col-span-10 col-start-1 col-span-12 mb-5 xs:mb-0"]}>
      <div class="flex flex-col text-slate-200 justify-between">
        <h2 id="88x31" class="text-5xl xs:text-6xl underline decoration-4 decoration-redLight mb-5 text-center">Cool Folks</h2>
        <div class="content-center mb-5">
          <BadgeDisplay collection="critterBadges" />
        </div>
        <p class="mb-5">Internet creatures with very cool personal sites! Eternally grateful to them and others for inspiration in making my own UwU</p>
        <div class="border-t-2 border-slate-200 pt-3 self-end">
          <p>
            If you've linked me on your site, feel free to shoot me an email at
            <a class="text-yellow hover:cursor-pointer" href="mailto:regal@cobra.monster">regal@cobra.monster</a> with your button and site so I can link back!
          </p>
        </div>
      </div>
    </HomeContentBox>
    <HomeContentBox columns={["lg:col-start-7 lg:col-span-5 xs:col-start-2 xs:col-span-10 col-start-1 col-span-12"]}>
      <div class="flex flex-col text-slate-200 h-full justify-between">
        <h2 class="text-5xl xs:text-6xl underline decoration-4 decoration-redLight mb-5 text-center">Neat Buttons</h2>
        <div class="content-center mb-5">
          <BadgeDisplay collection="standardBadges" />
        </div>
        <p>If I find a neat button I just plop it here. Some of them are links!</p>
      </div>
    </HomeContentBox>
  </HomeSection>
</Layout>

<style>
  h1,
  h2 {
    font-family: "Prospekt Regular", sans-serif;
    color: white;
  }
</style>
