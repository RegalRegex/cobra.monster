---
import TopNav from "@components/TopNav.astro";
import Layout from "./Layout.astro";
import PageHeader from "@components/PageHeader.astro";
import { Image } from "astro:assets";

import commieArgent from "@assets/argent/CommieCross-transparent_Batnoise.png";

const isCompact = Astro.url.pathname.split("/").includes("compact");
---

<Layout>
  <TopNav />
  <PageHeader>Book Reviews</PageHeader>
  <main class="flex gap-5">
    <div class={`flex flex-col m-5 gap-5 ${isCompact ? "flex-1/2" : "flex-2/3"}`}>
      <slot name="tag-list" />
      <slot name="book-list" />
    </div>
    <aside class={`m-5 hidden lg:block ${isCompact ? " hidden flex-1/2" : "2xl:block flex-1/3"}`}>
      <Image src={commieArgent} alt={'Argent holding a book labeled "The Beans of Production" '} class={"pt-10 sticky top-0 [transform:rotateY(180deg)"} />
    </aside>
  </main>
</Layout>
